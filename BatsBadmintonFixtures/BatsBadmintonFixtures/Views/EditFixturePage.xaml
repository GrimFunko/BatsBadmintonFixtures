<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BatsBadmintonFixtures.EditFixturePage"
             Title="Edit Fixture">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Edit Fixture" FontSize="Large" TextColor="Black"/>
            <Label Text="Team" FontSize="Small"/>
            <Picker ItemsSource="{Binding Teams}" ItemDisplayBinding="{Binding FullName}" SelectedItem="{Binding SelectedTeam}" />
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>